<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Calculadora de Desigualdades</title>
  <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      max-width: 700px;
      margin: auto;
      padding: 30px;
      background-color: #f2f2f2;
    }

    h1 {
      text-align: center;
      color: #003366;
    }

    label, select, input {
      display: block;
      width: 100%;
      margin: 10px 0 5px;
      font-size: 16px;
    }

    input, select {
      padding: 8px;
    }

    button {
      background-color: #004080;
      color: white;
      padding: 10px;
      width: 100%;
      border: none;
      margin-top: 15px;
      font-size: 16px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0066cc;
    }

    #resultado {
      margin-top: 20px;
      background-color: #e6f7e6;
      padding: 15px;
      border-left: 5px solid #33cc33;
      font-size: 18px;
    }

    #grafico {
      margin-top: 30px;
    }
  </style>
</head>
<body>

  <h1>Calculadora de Desigualdades</h1>

  <label for="tipo">Tipo:</label>
  <select id="tipo" onchange="mostrarCampoC()">
    <option value="lineal">Lineal (ax + b)</option>
    <option value="cuadratica">Cuadrática (ax² + bx + c)</option>
  </select>

  <label for="a">Coeficiente a:</label>
  <input type="number" id="a" step="any">

  <label for="b">Coeficiente b:</label>
  <input type="number" id="b" step="any">

  <div id="campo-c" style="display: none;">
    <label for="c">Coeficiente c:</label>
    <input type="number" id="c" step="any">
  </div>

  <label for="desigualdad">Desigualdad:</label>
  <select id="desigualdad">
    <option value="<">&lt;</option>
    <option value="<=">&le;</option>
    <option value=">">&gt;</option>
    <option value=">=">&ge;</option>
  </select>

  <button onclick="resolver()">Resolver y Graficar</button>

  <div id="resultado"></div>

  <div id="grafico"></div>

  <script>
    function mostrarCampoC() {
      const tipo = document.getElementById("tipo").value;
      document.getElementById("campo-c").style.display = tipo === "cuadratica" ? "block" : "none";
    }

    function invertirDesigualdad(d) {
      const mapa = { "<": ">", "<=": ">=", ">": "<", ">=": "<=" };
      return mapa[d] || d;
    }

    function resolver() {
      const tipo = document.getElementById("tipo").value;
      const a = parseFloat(document.getElementById("a").value);
      const b = parseFloat(document.getElementById("b").value);
      const desigualdad = document.getElementById("desigualdad").value;
      const resultadoDiv = document.getElementById("resultado");
      const graficoDiv = document.getElementById("grafico");

      let resultadoTexto = "";

      if (isNaN(a) || isNaN(b) || (tipo === "cuadratica" && isNaN(parseFloat(document.getElementById("c").value)))) {
        resultadoDiv.innerHTML = "Por favor completa todos los campos.";
        return;
      }

      let f = (x) => a * x + b;
      let labelY = "f(x) = " + a + "x + " + b;

      if (tipo === "cuadratica") {
        var c = parseFloat(document.getElementById("c").value);
        f = (x) => a * x * x + b * x + c;
        labelY = "f(x) = " + a + "x² + " + b + "x + " + c;
        const disc = b ** 2 - 4 * a * c;

        if (disc < 0) {
          resultadoTexto = (a > 0 && (desigualdad === "<" || desigualdad === "<=")) ||
                           (a < 0 && (desigualdad === ">" || desigualdad === ">="))
                           ? "Todos los x cumplen la desigualdad." 
                           : "No hay solución real.";
        } else {
          const x1 = (-b + Math.sqrt(disc)) / (2 * a);
          const x2 = (-b - Math.sqrt(disc)) / (2 * a);
          const [min, max] = [Math.min(x1, x2), Math.max(x1, x2)];

          if (a > 0) {
            if (desigualdad === "<") resultadoTexto = `x ∈ (${min.toFixed(2)}, ${max.toFixed(2)})`;
            if (desigualdad === "<=") resultadoTexto = `x ∈ [${min.toFixed(2)}, ${max.toFixed(2)}]`;
            if (desigualdad === ">") resultadoTexto = `x ∈ (-∞, ${min.toFixed(2)}) ∪ (${max.toFixed(2)}, ∞)`;
            if (desigualdad === ">=") resultadoTexto = `x ∈ (-∞, ${min.toFixed(2)}] ∪ [${max.toFixed(2)}, ∞)`;
          } else {
            if (desigualdad === "<") resultadoTexto = `x ∈ (-∞, ${min.toFixed(2)}) ∪ (${max.toFixed(2)}, ∞)`;
            if (desigualdad === "<=") resultadoTexto = `x ∈ (-∞, ${min.toFixed(2)}] ∪ [${max.toFixed(2)}, ∞)`;
            if (desigualdad === ">") resultadoTexto = `x ∈ (${min.toFixed(2)}, ${max.toFixed(2)})`;
            if (desigualdad === ">=") resultadoTexto = `x ∈ [${min.toFixed(2)}, ${max.toFixed(2)}]`;
          }
        }
      } else {
        if (a === 0) {
          resultadoTexto = eval(`0 ${desigualdad} ${-b}`) ? "Todos los valores de x son solución." : "No hay solución.";
        } else {
          const x = -b / a;
          const signo = (a > 0) ? desigualdad : invertirDesigualdad(desigualdad);
          resultadoTexto = `x ${signo} ${x.toFixed(2)}`;
        }
      }

      resultadoDiv.innerHTML = `<strong>Solución:</strong><br>${resultadoTexto}`;

      // Graficar función
      const xValues = [];
      const yValues = [];
      for (let x = -20; x <= 20; x += 0.1) {
        xValues.push(x);
        yValues.push(f(x));
      }

      Plotly.newPlot(graficoDiv, [{
        x: xValues,
        y: yValues,
        mode: 'lines',
        name: labelY,
        line: {color: 'blue'}
      }], {
        title: 'Gráfico de la función',
        xaxis: {title: 'x'},
        yaxis: {title: 'f(x)'},
        margin: { t: 40 }
      });
    }
  </script>
</body>
</html>
